<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 

<body>
    <%- include('./partials/navbar') %>
    <main>
        <div class="container p-5">
            <div class="row row-cols-3 gx-5 grid">
                <% products.forEach(product => { %>
                
                    <div class="g-col-4 grid p-2">
                        <div class="p-3 card g-col-4" style="width: 18rem;">
                            <% if(product.imagen){%>
                                <img src="/img/<%= product.imagen %>" class="card-img-top" >
                            <% } else{%>
                                <img src="/imagen/default.png" class="card-img-top" >
                               <% }%> 
                            <div class="card-body ">
                                <h5 class="card-title"><%= product.name%></h5>
                                <p class="card-text"><%= product.descripcion%></p>
                                <p class="card-number">$<%= product.price%></p>
                                <a href="admin/editer/<%= product.id%>" class="btn btn-primary">ver</a>
                            </div>
                        </div>
                    </div>
                <%});%>
            </div>
            
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>